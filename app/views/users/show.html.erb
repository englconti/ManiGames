<div class= "ubanner">

  <img src="https://kitt.lewagon.com/placeholder/users/ssaunier"
       alt="profile picture" style="border-radius: 100%">
  <div class="upfp">
    <h3>player: <%= @user.username.downcase %></h3>
    <h6>email: <%= @user.email.downcase %></h6>
  </div>

  <br>

  <!-- Box inside banner contining three boxes for cards -->
  <div class="ucontainer">
    <div class="utemplate">
      <!-- Container for the game cards -->
      <div id="my-games">
        <h3 style="display: inline-flex; align-items: flex-start">MY GAMES<%= link_to 'Add a game!', new_game_path, class: "ubtn-gradient" %></h3>
        <% @user.games.each do |game|%>

          <!-- cards for games -->
          <div class="ucard-trip">
            <img src="<%= game.gamecover %>" />
            <div class="ucard-trip-infos">
              <div>
                <h2><%= game.title %></h2>
                <h2><%= game.console %></h2>
              </div>
              <div>
                <% game.available = game.rents.empty? %>
                <p>Rent/day: $<%= game.daily_rent %></p>
                <p>Available: <%= game.available ? "YES" : "NO" %></p>
              </div>
            </div>
            <%= link_to "Edit game", edit_game_path(game), class: "ubtn-gradient" %>
            <%= link_to "Delete game", game_path(game), method: 'DELETE', data: { confirm: "Are you sure?" }, class: "ubtn-gradient" %>
          </div>
        <%end%>
      </div>

      <!-- Container for the rent out cards -->
      <div id="rented-games">
        <h3>MY GAMES RENTED</h3>
        <% @user.games.each do |game|%>
          <% if !game.rents.empty? %>

            <!-- cards for rents out -->
            <div class="ucard-trip">
              <img src="<%= game.gamecover %>" />
              <div class="ucard-trip-infos">
                <div>
                  <h2><%= game.title %></h2>
                  <h2>Renter id: <%= "Renter ID: #{game.rents[0].user_id}" %></h2>
                  <h2>Renter alias: <%= "Renter Nickname: #{game.rents[0].user.username}" %></h2>
                </div>
                <div>
                  <h2 class="ucard-trip-pricing">From: <%=  game.rents[0].start_date.to_s.split(" ")[0] %></h2>
                  <h2 class="ucard-trip-pricing">Until: <%=  game.rents[0].end_date.to_s.split(" ")[0] %></h2>
                </div>
              </div>
            </div>
          <%end%>
        <%end%>
      </div>

      <!-- Container for the rent in cards -->
      <div id="rented-games-by-me">
        <h3>GAMES I RENTED</h3>
        <% @rents.each do |rent|%>
          <!-- cards for rent out -->
          <div class="ucard-trip">
            <img src="<%= rent.game.gamecover %>" />
            <div class="ucard-trip-infos">
              <div>
                <h2><%= rent.game.title %></h2>
                <h2><%= rent.game.console %></h2>
                <h2>OWNER: <%=  rent.game.user.username%></h2>
              </div>
              <div>
                <h2 class="ucard-trip-pricing">From: <%=  rent.start_date.to_s.split(" ")[0] %></h2>
                <h2 class="ucard-trip-pricing">Until: <%=  rent.end_date.to_s.split(" ")[0] %></h2>
              </div>
            </div>
            <h2 style="text-align: center">TOTAL: $ <%=  rent.price %></h2>
          </div>
          <p><%= link_to "Cancel Rent", rent_path(rent), method: 'DELETE', data: { confirm: "Are you sure?" }, class: "ubtn-gradient" %></p>
        <%end%>
      </div>
    </div>
  </div>
</div>
